<mvc:View
    controllerName="ypshopping.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
>
    <f:DynamicPage
        id="dynamicPageId"
        toggleHeaderOnTitleClick="false"
    >
        <!-- DynamicPage Title -->
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <Title text="Produkte" />
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>

        <!-- DynamicPage Content -->
        <f:content>
            <Table
                id="productsTable"
                mode="SingleSelectMaster"
                itemPress="onListItemPress"
                inset="false"
                items="{
					path: 'northWind>/Products'
				}"
                class="sapFDynamicPageAlignContent"
                width="auto"
            >
                <columns>
                    <Column hAlign="Left">
                        <Text text="Item ID" />
                    </Column>

                    <Column
                        width="12em"
                        hAlign="Begin"
                    >
                        <Text text="Produktname" />
                    </Column>

                    <Column hAlign="Right">
                        <Text text="Preis" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation">
                        <cells>
                            <ObjectNumber
                                number="{
										parts:[{path:'northWind>ID'}],
										type: 'sap.ui.model.type.Integer'
									}"
                            />
                            <ObjectIdentifier title="{northWind>Name}" />
                            <ObjectNumber
                                textAlign="Right"
                                number="{
                                        path: 'northWind>Price',
                                        formatter: '.formatPriceWithEuro'
                                    }"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
